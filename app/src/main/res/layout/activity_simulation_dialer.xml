<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/simulation_dialer_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"
                app:title="@string/simulation_dialer_title" />

            <android.support.design.widget.TabLayout
                android:id="@+id/simulation_dialer_tabBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="scrollable">

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="!Dialer" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="!Contacts" />
            </android.support.design.widget.TabLayout>
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:id="@+id/simulation_dialer_dialerContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/simulation_dialer_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:lines="1"
                android:maxLines="1"
                android:textSize="40sp"
                tools:ignore="LabelFor" />

            <LinearLayout
                android:id="@+id/simulation_dialer_gridNumbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/simulation_dialer_dialerContent_btn_BACK"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:background="@android:drawable/ic_input_delete" />
                </RelativeLayout>

                <LinearLayout
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/simulation_dialer_dialerContent_btn_1"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight=".33"
                        android:text="1"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/simulation_dialer_dialerContent_btn_2"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight=".33"
                        android:text="2"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/simulation_dialer_dialerContent_btn_3"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight=".33"
                        android:text="3"
                        android:textSize="40sp" />
                </LinearLayout>

                <LinearLayout
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/simulation_dialer_dialerContent_btn_4"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight=".33"
                        android:text="4"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/simulation_dialer_dialerContent_btn_5"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight=".33"
                        android:text="5"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/simulation_dialer_dialerContent_btn_6"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight=".33"
                        android:text="6"
                        android:textSize="40sp" />
                </LinearLayout>

                <LinearLayout
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/simulation_dialer_dialerContent_btn_7"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight=".33"
                        android:text="7"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/simulation_dialer_dialerContent_btn_8"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight=".33"
                        android:text="8"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/simulation_dialer_dialerContent_btn_9"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight=".33"
                        android:text="9"
                        android:textSize="40sp" />
                </LinearLayout>

                <LinearLayout
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/simulation_dialer_dialerContent_btn_STAR"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight=".33"
                        android:text="*"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/simulation_dialer_dialerContent_btn_0"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight=".33"
                        android:text="0"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/simulation_dialer_dialerContent_btn_HASH"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight=".33"
                        android:text="#"
                        android:textSize="40sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/simulation_dialer_dialerContent_btn_CALL"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight=".5"
                        android:background="@color/colorAccent"
                        android:text="!call" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>